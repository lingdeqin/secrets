<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16.0dp"
    android:paddingRight="16.0dp"
    android:paddingTop="15.0dp"
    android:paddingBottom="15.0dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:id="@+id/list_item_secrets"
    >
    <FrameLayout android:id="@+id/ic_secret" android:layout_width="42.0dip"
        android:layout_height="42.0dip" android:layout_centerVertical="true" android:layout_marginEnd="14.0dip">

        <ImageView android:id="@+id/id_imageview_activity_list_view_row_icon"
            android:layout_width="42.0dip" android:layout_height="42.0dip"
            android:contentDescription="@string/app_name" />

        <ImageView android:layout_gravity="center"
            android:id="@+id/id_imageview_activity_list_view_row_check_icon"

            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/test"
            />

    </FrameLayout>

    <TextView android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_toEndOf="@id/ic_secret" />

    <TextView android:textAppearance="?android:textAppearanceSmall"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@id/item_number"
        android:layout_toEndOf="@id/ic_secret" />

    <TextView android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/darker_gray"
        android:gravity="end"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="18:52"
        android:layout_alignBottom="@id/item_number"
        android:layout_toEndOf="@id/item_number"
        android:layout_alignParentEnd="true" />


</RelativeLayout>